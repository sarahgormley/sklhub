<div class="row row-adjust row-style d-flex justify-content-center align-items-center">
    <div class="col-12 form-center">
        <h2 class="dashboard-heading">
            Search jobs
        </h2>
        <form class="form-styling">
            <div class="mb-3">
                 <textarea class="form-control form-heading" id="job-search" rows="1" placeholder="Keyword"></textarea>
            </div>
            <button type="submit" class="btn btn-style">Search</button>
        </form>
    </div>
</div>

<!-- List all jobs in the database -->
{{#each jobs as |job|}}
<div class="row row-adjust row-style row-border d-flex justify-content-center align-items-center">
    <div class="col-12">
        <div class="row row-adjust">
            <div class="col-12 text-center">
                <h2 class="dashboard-heading">
                    {{job.name}}
                </h2>
            </div>
        </div>
        <div class="row row-adjust text-center">
            <div class="col-12 col-lg-6">
                <p class="job-details">
                    <i class="bi bi-stopwatch-fill icon-color"></i> {{job.time_value}} minutes
                </p>
            </div>

            <div class="col-12 col-lg-6">
                <p class="job-details">
                    <i class="bi bi-geo-alt-fill icon-color"></i> {{job.location}}
                </p>
            </div>
        </div>

        <div class="row row-adjust">
            <div class="col-12">
                <p>
                    {{job.description}}
                </p>
            </div>
        </div>

        <div class="row row-adjust">
            <div class="col-12 text-center">
                <a href="/jobs/{{job.id}}">
                    <button type="button" class="btn btn-style more-info">More info</button>
                </a>
            </div>
        </div>
    </div>
</div>
{{/each}}